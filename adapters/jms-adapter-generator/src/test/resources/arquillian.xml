<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://jboss.org/schema/arquillian
        http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <!-- Sets the protocol which is how Arquillian talks and executes the tests inside the container -->
    <defaultProtocol type="Servlet 3.0" />

    <container qualifier="widlfly" default="true">
        <configuration>
            <property name="jbossHome">${jbossHome:target/wildfly-10.0.0.Final}</property>
            <property name="serverConfig">standalone-test.xml</property>
            <property name="javaVmArguments">-Djava.util.logging.manager=org.jboss.logmanager.LogManager</property>
        </configuration>
    </container>

</arquillian>
